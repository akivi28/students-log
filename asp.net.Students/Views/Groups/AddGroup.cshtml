@model List<Info>



<div class="row">
    <div class="col-md-5">
        <form method="post" action="/Groups/AddGroup" class="mt-5">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label for="groupName">Name of group:</label>
                        <input type="text" id="groupName" name="groupName" class="form-control" required>
                    </div>
                    <br />
                    <fieldset class="form-group">
                        <legend>Choose students:</legend>
                        @foreach (var student in Model)
                        {
                            <div class="form-check">
                                <input type="checkbox" id="@student.Id" name="selectedStudents" value="@student.Id" class="form-check-input">
                                <label for="@student.Id" class="form-check-label">@student.Name @student.Surname</label>
                            </div>
                        }
                    </fieldset>
                </div>
                <div class="card-footer">
                    <button class="btn btn-primary">Add</button>
                </div>
            </div>
        </form>
    </div>
</div>